          {
            TECNOLGIAS_APRENDIDAS.map(({ type, tecnologies }) => (
              <li class="mb-4 ms-4">
                <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-3 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700" />
                <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
                  {type}
                </time>
                {tecnologies.map((tecnology) => (
                  <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2 flex items-center gap-3">
                    <tecnology.Icon class="w-6 h-6" />
                    {tecnology.name}
                  </h3>
                ))}
              </li>
            ))
          }
        </ol>
      </div>

      <div class="flex flex-col">
        <h2 class="mb-4 lg:text-3xl text-xl">Tecnologías por aprender</h2>
        <!-- en Aprendizaje -->
        <ol class="relative border-s border-gray-200 dark:border-gray-700">
          {
            TECNOLGIAS_APRENDIZAJES.map(({ date, subtitle, title, Icon }) => (
              <li class="mb-4 ms-4">
                <div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-3 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700" />
